/*! star */
.ma-star-wrap
    padding 16px 0 4px 0
    color #2196f3
    
.ma-star-user-list-wrap
    margin 4px 4px 0 4px

.ma-star-user-image
    width 20px
    height 20px
    margin 0 2px
    
.ma-app-star-btn
    padding 4px 10px
    width 60%
    margin-bottom 10px
    background #fff
    color #2196f3
    trans_bounce()
    fontsize 11px
    font-family 'Robot'
    font-weight bold
    cursor pointer
    
    .icon
        display inline-block
        width 18px
        height 18px
        background url('https://res.cloudinary.com/hcod0wyyv/image/upload/img/icon-add-star.svg')
        position relative
        top 1px
        margin-right 5px
        trans_bounce(1s)
        
    span
        position relative
        top -2px
        font-family 'Robot Light'
      
    &:hover
        transform scale(1.02)
        background #2196f3
        .icon
            transform rotate(360deg)
        span
            color #fff
            
    &:active
        background #ececec
        
.ma-app-star-count
    text-align center
    color #fbc02d
    margin 0
    display inline-block
    margin-right 12px
    
    .star
        display inline-block
        inline-block(.09em)
    .count
        display inline-block
        inline-block(.09em)
        margin-left 2px

.ma-app-comment-count
    .comment
        width 16px
        height 14px
        margin-top -2px
    
    .count
        display inline-block
        margin-left 2px
        color #666