/*! List */
.ma-list li
  margin-bottom 6px

.ma-list-bordered li
  margin 0
  padding 12px 0 4px 0
  border-top 1px solid #e5e5e1
  
  &:first-child
      border-top none

.ma-app-list-item
    position relative
    margin-bottom 24px
    // padding 20px
    border 1px solid #e9e9e9
    background-color #fff
    box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(0, 0, 0, 0.12)
    clearfix()

    &:hover
        box-shadow 1px 1px 2px 4px rgba(0,0,0,.14),1px 1px 1px 1px rgba(0,0,0,.2),1px 1px 1px 1px rgba(0,0,0,.12)
        -webkit-transition all 0.25s ease-in-out
        -moz-transition all 0.25s ease-in-out
        -ms-transition all 0.25s ease-in-out
        -o-transition all 0.25s ease-in-out
        transition all 0.25s ease-in-out


    &>a
      display block
      width 100%
      height 160px
            
    .ma-app-list-item-image
        float left
        width 160px
        height 160px
        overflow hidden
        line-height 160px
        text-align center
        margin 0 auto
        background-position center center
        background-repeat no-repeat
        background-size cover
        position relative
        
        img
            max-width 160px
            max-height 160px
            border-radius(8px)
            
    .ma-app-list-item-content
        margin-left 160px

    .ma-app-list-item-title
        font-size 28px
        // color #666
        
        h4
            padding 8px 16px
            margin-bottom 0
            margin-top 0
        
    .ma-app-list-item-description        
        height 62px
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 3
        -webkit-box-orient vertical
        p
            padding 0 16px
            font-size 14px
        
    .ma-app-list-item-toolbar
        position absolute
        bottom 0px
        right 16px
        
        .ma-app-star-count
            display inline-block
            margin-left 8px
        
            .count
                margin 0

    .ma-app-list-item-member-wrap
        border-top 1px solid rgba(0,0,0,.1)
        padding 12px 16px
        margin-top 8px

        img
            width 32px
            height 32px

            
.ma-app-list-pagination
    .pagination
        display block
        text-align center
        
        span
            margin 12px    

.ma-filter-by-wrap
    display none
    
    .ma-tag
        margin-right 8px
        
.ma-constant-icon-list
    margin 20px auto
    text-align center
    // vendor-value('display', flex)
    display -webkit-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    // vendor('flex-direction', row)
    vendor('flex-wrap', wrap)
    
    .ma-constant-icon-list-item
        max-width 230px
        padding 0 8px
        vendor-value('display', flex)
        vendor('flex', 0 0 210px)
        // vendor('align-items', center)
        vendor('justify-content', center)

        img
            width 60px
            height 60px

    .ma-constant-icon-list-title
        font-size 16px
        color #666
    
    // for top page
    &.section-container
        vendor('justify-content', space-between)

        .ma-constant-icon-list-item    
            margin-bottom 20px
    