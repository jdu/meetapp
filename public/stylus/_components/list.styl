/*! List */
.ma-list li
  margin-bottom 6px

.ma-list-bordered li
  margin 0
  padding 12px 0 4px 0
  border-top 1px solid #e5e5e1
  
  &:first-child
      border-top none

.ma-app-list-item
    position relative
    margin-bottom 12px
    padding 20px
    background #fff
    border 2px solid #f6f6f6
    clearfix()

    &:hover
        border 2px solid #303f9f

    &>a
      display block
      width 100%
      height 160px
            
    section
        margin 8px 0
    
    .ma-app-list-item-image
        float left
        width 160px
        height 160px
        line-height 160px
        text-align center
        
        img
            max-width 160px
            max-height 160px
            border-radius(8px)
            
    .ma-app-list-item-content
        margin-left 180px

    .ma-app-list-item-title
        font-size 28px
        color #666
        
    .ma-app-list-item-description        
        height 58px
        overflow hidden
        
    .ma-app-list-item-toolbar
        position absolute
        bottom 0px
        right 40px
        
        .ma-app-star-count
            display inline-block
            margin-left 8px
        
            .count
                margin 0

    .ma-app-list-item-member-wrap
        img
            width 32px
            height 32px

            
.ma-app-list-pagination
    .pagination
        display block
        text-align center
        
        span
            margin 12px    

.ma-filter-by-wrap
    display none
    
    .ma-tag
        margin-right 8px
        
.ma-constant-icon-list
    margin 20px auto
    text-align center
    // vendor-value('display', flex)
    display -webkit-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    // vendor('flex-direction', row)
    vendor('flex-wrap', wrap)
    
    .ma-constant-icon-list-item
        max-width 230px
        padding 0 8px
        vendor-value('display', flex)
        vendor('flex', 0 0 210px)
        // vendor('align-items', center)
        vendor('justify-content', center)

        img
            width 60px
            height 60px

    .ma-constant-icon-list-title
        font-size 16px
        color #666
    
    // for top page
    &.section-container
        vendor('justify-content', space-between)

        .ma-constant-icon-list-item    
            margin-bottom 20px
    