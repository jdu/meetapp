/*! button */
.ma-app-edit-btn,
.ma-app-delete-btn,
.ma-profile-edit-update-btn,
.ma-profile-edit-cancel-btn
    margin 0 8px
    
.btn-file
    height 40px
    
#ma-mypage-edit-profile-image-input
    height 40px

.register-form-image-delete-btn
    margin-top 4px

.ma-friend-delete-btn
    margin 0 8px
    
.ma-join-btn
    font-size 16px
    
.btn-fab
    position relative
    float right
    background-color #ff4081
    font-size 38px
    margin 5px 0
    padding 15px
    border-radius 100%
    -webkit-transition all 200ms ease
    transition all 200ms ease
    width 62px
    -webkit-transform scale(0.9)
    -ms-transform scale(0.9)
    transform scale(0.9)
    height 62px
    line-height 32px
    box-shadow 0 1px 5px rgba(0,0,0,0.28)
    
.btn-register
    position absolute
    right 16px
    top 30px
    z-index 100